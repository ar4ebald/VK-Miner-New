<Window x:Class="VK_Miner.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VK_Miner"
        mc:Ignorable="d"
        Title="Настройки"
        Width="260"
        SizeToContent="Height" ResizeMode="CanMinimize"
        Closing="SettingsWindow_OnClosing">
    <StackPanel>
        <StackPanel Margin="10" x:Name="RootPanel"></StackPanel>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Width="100" Padding="4" Click="SortButton_OnClick">Упорядочить</Button>
            <Button Grid.Column="1" Width="100" Padding="4" Click="DefaultButton_Click">По умолчанию</Button>
        </Grid>
    </StackPanel>
</Window>
